<%- include('../includes/head.ejs') %>
	<link rel="stylesheet" href="/css/style.css">
	</head>
	<body>
    <%- include('../includes/primary-nav.ejs') %>


    <div class="container mt-5">
      <% if(products.length > 0) { %>
        <h1 class="text-center">Your Cart</h1>
        <ul class="list-group">
        <% products.forEach(p => { %>
          <li class="list-group-item list-group-item-action"><%= p.productId.title %> <strong class="text-grey">x<%= p.quantity %></strong><h6 class="lead float-right">$<%= p.productId.price * p.quantity %></h6></li>
          
        <% }) %>
          <span class="display-4 text-center">Total: $<%= total %></span>
        </ul>
      <% } else { %>
        No Items in the cart
      <% }  %>
    </div>

		<%- include('../includes/end.ejs') %>
